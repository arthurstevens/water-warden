<%# Monitor Controls: CSV exporting functionality and node table filtering %>
<section class="flex flex-col mb-6 p-6 w-full bg-white border-solid border-2 border-gray-300 rounded-lg shadow-sm">
  <h1 class="text-2xl font-semibold">Monitor Controls</h1>
  <p class="text-sm font-normal text-gray-500">Filter and export monitoring data</p>

  <%# Content %>
  <div class="flex flex-col sm:flex-row mt-7 mb-4 gap-3 justify-between items-center w-full">
    <%# Filter %>
    <div class="flex flex-col sm:flex-row gap-3 items-center w-full sm:max-w-3xl">
      <%# Filter: text %>
      <div class="flex items-center gap-3 w-full">
        <img src="assets/filter-icon.svg" alt="Filter icon" class="w-5 h-5">
        <input id="node-filter-text" type="text" placeholder="Filter text" class="px-3 py-1.5 h-10 border-2 border-gray-300 rounded-md text-md font-medium w-full sm:w-md hover:border-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
      </div>

      <%# Filter: column select and button %>
      <div class="flex gap-3 w-full items-center">
        <select id="node-filter-column" class="px-3 py-1.5 w-2/3 h-10 sm:w-md rounded-md border-2 bg-white text-md font-medium text-gray-600 border-gray-300 hover:border-black focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
          <option value="" selected disabled hidden>Column</option>
        </select>

        <button id="node-filter-button" class="px-3 py-1.5 w-1/3 h-10 rounded-md text-md text-white bg-blue-600 hover:bg-blue-500 font-medium active:bg-blue-800 transition">
          Filter
        </button>
      </div>
    </div>

    <hr class="visible sm:hidden solid w-full">

    <%# Export %>
    <button id="export-csv-button" class="flex items-center justify-center gap-3 w-full sm:w-auto border-2 border-gray-300 rounded-md px-4 py-1 font-medium text-md hover:border-black active:bg-gray-200 transition">
      <img src="assets/download-icon.svg" class="w-5 h-5">
      Export to CSV
    </button>
  </div>
</section>