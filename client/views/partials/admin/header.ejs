<%# Header: includes logo, title, and client status info %>
<header class="flex bg-gray-700 text-white shadow pt-6 pb-6 justify-center">
  <div class="max-w-7xl w-full px-2 flex justify-between sm:px-6">
    <%# Logo and title %>
    <div class="flex items-center gap-2 drop-shadow-lg">
      <img src="assets/logo.svg" alt="Amanzi Warden logo" class="w-10 h-10 sm:w-14 sm:h-14">
      <div>
        <h1 class="text-2xl font-bold"><%= header.title %></h1>
        <p class="text-sm text-blue-100"><%= header.subtitle %></p>
      </div>
    </div>

  <%# User actions %>
  <div class="flex flex-col sm:flex-row justify-center items-center gap-1 sm:gap-6">
    <%# Username %>
    <div class="flex gap-1 text-sm ml-auto">
      <p class="text-gray-200 hidden sm:inline">Logged in as</p>
      <p class="text-white font-bold"><%= user.username %></p>
    </div>

    <%# Logout %>
    <a href="auth/logout" class="relative group flex gap-1 items-center text-sm text-sky-100 font-bold">
      <img src="assets/logout-icon.svg" alt="Logout icon" class="w-3 h-3">
      Logout
      <span class="absolute right-0 -bottom-0.5 h-0.5 bg-sky-100 transition-all duration-300 w-0 group-hover:w-full"></span>
    </a>
  </div>

  </div>
</header>