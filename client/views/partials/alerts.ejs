<%# Alerts: reports alerts and errors %>

<%# Errors %>
<section id="error-container" class="w-full mb-6 flex items-center gap-3 p-3 w-full bg-red-50 border-solid border-2 border-red-600 rounded-lg hidden">
  <img id="error-img" src="assets/status-warning-icon.svg" alt="Error indicator" class="w-5 h-5">
  <div class="flex gap-1">
    <p id="error-heading" class="text-red-800 font-bold"></p>
    <p id="error-content" class="text-red-800"></p>
  </div>
</section>

<%# Alerts %>
<section id="alerts-container" class="flex flex-col gap-3 mb-6">
  <%# Temporary loading message, client JS dynamically generates alerts %>
  <section  class="w-full mb-6 flex items-center gap-3 p-3 w-full bg-gray-50 border-solid border-2 border-gray-600 rounded-lg">
    <img src="assets/loading-icon.svg" alt="Alert indicator" class="w-5 h-5">
    <div class="w-full">
      <div class="flex gap-1">
        <p class="text-gray-800 font-bold">Loading Dashboard:</p>
        <p class="text-gray-800">Awaiting response from server.</p>
      </div>
    </div>
  </section>
</section>
