<%# Header: includes logo, title, and client status info %>
<header class="flex bg-blue-600 text-white shadow pt-6 pb-6 justify-center">
  <div class="max-w-7xl w-full px-2 flex justify-between sm:px-6">
    <%# Logo and title %>
    <div class="flex items-center gap-2 drop-shadow-lg">
      <img src="assets/logo.svg" alt="Amanzi Warden logo" class="w-10 h-10 sm:w-14 sm:h-14">
      <div>
        <h1 class="text-2xl font-bold"><%= header.title %></h1>
        <p class="text-sm text-blue-100"><%= header.subtitle %></p>
      </div>
    </div>

    <%# User actions %>
    <div class="flex items-center gap-2 sm:gap-8">
      <%# Username %>
      <%# Logout %>
    </div>
  </div>
</header>